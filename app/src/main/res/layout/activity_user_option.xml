<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_orange"
    android:clickable="true"
    android:contextClickable="true"
    android:orientation="vertical"
    android:outlineProvider="paddedBounds"
    tools:context=".UserOption"
    android:focusable="true">

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/Top_nav"
        android:layout_width="407dp"
        android:layout_height="77dp"
        android:clickable="true"
        android:orientation="horizontal"
        android:textAlignment="center"
        app:itemTextAppearanceActiveBoldEnabled="true"
        app:itemTextColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:focusable="true">

        <TextView
            android:letterSpacing="0.2"
            android:fontFamily="@font/bubblegum_sans"
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/app_name"
            android:textAlignment="center"
            android:background="@color/orange_btn_color"
            android:textColor="@color/navy_blue"
            android:textSize="36sp"
            android:typeface="normal" />
    </com.google.android.material.navigation.NavigationView>

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:fontFamily="@font/cinzel_decorative_bold"
        android:text="Pick Your Role"
        android:textColor="@color/navy_blue"
        android:padding="10dp"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/customer_option"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Top_nav"
        tools:ignore="HardcodedText,TextSizeCheck" />


    <ImageButton
        android:background="@drawable/rounded_corner_background"
        android:id="@+id/customer_option"
        android:layout_width="314dp"
        android:layout_height="222dp"
        android:layout_marginTop="136dp"
        android:alpha="0.6"
        android:backgroundTint="#0D47A1"
        android:contentDescription="@string/todo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.484"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Top_nav"
        app:srcCompat="@drawable/customer"
        tools:ignore="DuplicateSpeakableTextCheck" />

    <ImageButton
        android:background="@drawable/rounded_corner_background"
        android:id="@+id/owner_option"
        android:layout_width="316dp"
        android:layout_height="224dp"
        android:layout_marginBottom="44dp"
        android:alpha="0.6"
        android:backgroundTint="#0D47A1"
        android:contentDescription="@string/todo1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.473"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/customer_option"
        app:layout_constraintVertical_bias="0.857"
        app:srcCompat="@drawable/chef" />

    <TextView
        android:id="@+id/textViewowner"
        android:layout_width="116dp"
        android:layout_height="46dp"
        android:background="@color/orange_btn_color"
        android:gravity="center"
        android:text="@string/owner_text"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:fontFamily="@font/andika_new_basic_bold_italic"
        app:layout_constraintBottom_toBottomOf="@+id/owner_option"
        app:layout_constraintEnd_toEndOf="@+id/owner_option"
        app:layout_constraintStart_toStartOf="@+id/owner_option"
        app:layout_constraintTop_toTopOf="@+id/owner_option"
        app:layout_constraintVertical_bias="0.825"
        tools:ignore="DuplicateIds" />
    <TextView
        android:id="@+id/textViewcustomer"
        android:layout_width="116dp"
        android:layout_height="46dp"
        android:background="@color/orange_btn_color"
        android:gravity="center"
        android:text="@string/customer_text"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:fontFamily="@font/andika_new_basic_bold_italic"
        app:layout_constraintBottom_toBottomOf="@+id/customer_option"
        app:layout_constraintEnd_toEndOf="@+id/customer_option"
        app:layout_constraintStart_toStartOf="@+id/customer_option"
        app:layout_constraintTop_toTopOf="@+id/customer_option"
        app:layout_constraintVertical_bias="0.829" />


</androidx.constraintlayout.widget.ConstraintLayout>