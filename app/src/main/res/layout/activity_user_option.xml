<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:clickable="true"
    android:contextClickable="true"
    android:orientation="vertical"
    android:outlineProvider="paddedBounds"
    tools:context=".UserOption"
    android:focusable="true">

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/Top_nav"
        android:layout_width="407dp"
        android:layout_height="77dp"
        android:background="#F64C16"
        android:clickable="true"
        android:orientation="horizontal"
        android:textAlignment="center"
        app:itemTextAppearanceActiveBoldEnabled="true"
        app:itemTextColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:focusable="true">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/app_name"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="36sp"
            android:typeface="normal" />
    </com.google.android.material.navigation.NavigationView>

    <ImageButton
        android:id="@+id/customer_option"
        android:layout_width="314dp"
        android:layout_height="222dp"
        android:layout_marginTop="136dp"
        android:alpha="0.6"
        android:backgroundTint="#0D47A1"
        android:contentDescription="@string/todo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.484"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Top_nav"
        app:srcCompat="@drawable/customer"
        tools:ignore="DuplicateSpeakableTextCheck" />

    <ImageButton
        android:id="@+id/owner_option"
        android:layout_width="316dp"
        android:layout_height="224dp"
        android:layout_marginBottom="44dp"
        android:alpha="0.6"
        android:backgroundTint="#0D47A1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/customer_option"
        app:layout_constraintVertical_bias="0.866"
        app:srcCompat="@drawable/chef"
        android:contentDescription="@string/todo1" />

    <TextView
        android:id="@+id/textViewowner"
        android:layout_width="116dp"
        android:layout_height="46dp"
        android:background="#F64C16"
        android:gravity="center"
        android:text="@string/owner_text"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/owner_option"
        app:layout_constraintEnd_toEndOf="@+id/owner_option"
        app:layout_constraintStart_toStartOf="@+id/owner_option"
        app:layout_constraintTop_toTopOf="@+id/owner_option"
        app:layout_constraintVertical_bias="0.825"
        tools:ignore="DuplicateIds" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="296dp"
        android:layout_height="46dp"
        android:gravity="center"
        android:text="What are you??"
        android:textColor="#F64C16"
        android:textSize="34sp"
        app:layout_constraintBottom_toTopOf="@+id/customer_option"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Top_nav"
        tools:ignore="HardcodedText,TextSizeCheck" />

    <TextView
        android:id="@+id/textViewcustomer"
        android:layout_width="116dp"
        android:layout_height="46dp"
        android:background="#F64C16"
        android:gravity="center"
        android:text="@string/customer_text"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/customer_option"
        app:layout_constraintEnd_toEndOf="@+id/customer_option"
        app:layout_constraintStart_toStartOf="@+id/customer_option"
        app:layout_constraintTop_toTopOf="@+id/customer_option"
        app:layout_constraintVertical_bias="0.829" />


</androidx.constraintlayout.widget.ConstraintLayout>